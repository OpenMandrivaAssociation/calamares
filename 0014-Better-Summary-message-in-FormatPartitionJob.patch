@@ -56,7 +56,8 @@ FormatPartitionJob::prettyName() const
 QString
 FormatPartitionJob::prettyDescription() const
 {
-    return tr( "Format <b>%3MB</b> partition <b>%1</b> with file system <b>%2</b>." )
